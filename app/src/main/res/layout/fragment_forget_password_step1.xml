<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_login">

    <ImageView
        android:id="@+id/forget_fragment_step1_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/dim_80dp"
        android:layout_marginTop="@dimen/dim_80dp"
        android:layout_marginEnd="@dimen/dim_80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_white_logo" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forget_fragment_step1_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_fragment_step1_logo"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:background="@drawable/shape_et"
        android:paddingStart="@dimen/dim_16dp"
        android:paddingEnd="@dimen/dim_16dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="11">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Phone Number"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:id="@+id/forget_fragment_step1_btn_send"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_btn"
        android:text="send"
        android:layout_below="@id/forget_fragment_step1_et_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_16dp"
        />

</RelativeLayout>