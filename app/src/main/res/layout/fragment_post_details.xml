<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/post_fragment_details_img"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            app:cardCornerRadius="@dimen/dim_24dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_16dp">

                <ImageView
                    android:id="@+id/post_fragment_details_img_favorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/dim_24dp"
                    android:layout_marginTop="@dimen/dim_4dp"
                    android:background="@drawable/shape_favorite_icon_none"
                    android:padding="@dimen/dim_16dp" />

                <TextView
                    android:id="@+id/post_fragment_details_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dim_4dp"
                    android:text="Title Of Post"
                    android:textAlignment="center"
                    android:textColor="#9A0B0B"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/post_fragment_details_tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/post_fragment_details_tv_title"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dim_16dp"
                    android:text="deails of post"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="24sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>