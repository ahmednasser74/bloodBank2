<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60dp"
        android:layout_marginStart="@dimen/dim_16dp"
        android:layout_marginEnd="@dimen/dim_16dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_4dp"
        app:cardCornerRadius="@dimen/dim_16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dim_16dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/dim_16dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/item_notification_img_ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_red_ring_black_24dp"/>

                <TextView
                    android:layout_marginStart="@dimen/dim_8dp"
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:id="@+id/item_notification_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_20dp"
                    android:layout_toStartOf="@id/item_notification_tv_time"
                    android:layout_toEndOf="@id/item_notification_img_ring"
                    android:textColor="#9A0B0B" />

                <TextView
                    android:id="@+id/item_notification_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_orange_watch_later_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="#ED5107" />

            </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>